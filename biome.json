      "onpopstate",
      "__DEV__",
      "onemptied"
    ]
  },
  "overrides": [
    {
      "includes": ["**/metro.config.js"],
      "javascript": {
        "globals": ["exports"]
      }
    }
  ],
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
